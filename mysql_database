#####Calcular el Tama単o de Base de datos######

SELECT table_schema AS "Base de datos",
ROUND(SUM(data_length + index_length) / 1024 / 1024, 2) AS "Tama単o (MB)"
FROM information_schema.TABLES
GROUP BY table_schema;

#####Calcular el Tama単o de tabla de base de datos######

SELECT table_name AS "Tabla",
ROUND(((data_length + index_length) / 1024 / 1024), 2) AS "Tama単o (MB)"
FROM information_schema.TABLES
WHERE table_schema = "base_de_datos"
ORDER BY (data_length + index_length) DESC;

#####TIPO DE DATOS EN TABLAS##########
SELECT table_schema, table_name, engine
FROM information_schema.tables
order by table_schema,table_name,engine;
